# n8n Production Configuration

# Host configuration
N8N_HOST=your-domain.com
N8N_PROTOCOL=https

# Security (REQUIRED for production)
N8N_ENCRYPTION_KEY=your-strong-encryption-key-here
NODE_ENV=production

# Database configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=strong-password-here
POSTGRES_DB=n8n

# Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=strong-admin-password-here

# Email configuration
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.example.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=your-smtp-user
N8N_SMTP_PASS=your-smtp-password
N8N_SMTP_SENDER=n8n@example.com

# Timezone settings
GENERIC_TIMEZONE=UTC

# Execution settings
EXECUTION_PROCESS=main
EXECUTION_TIMEOUT=30000

# Webhook settings
WEBHOOK_URL=https://your-domain.com/

# Disable telemetry and banners
N8N_DIAGNOSTICS_ENABLED=false
N8N_HIRING_BANNER_ENABLED=false

# Optional: Redis configuration (for queue mode)
# QUEUE_BULL_REDIS_HOST=redis
# QUEUE_BULL_REDIS_PORT=6379